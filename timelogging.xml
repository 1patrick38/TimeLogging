<?xml version="1.0" encoding="UTF-8"?>
<project name="timelogging" default="all">
  
  
  <property file="timelogging.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/.idea/module_timelogging.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.timelogging, clean.artifact.timelogging" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.timelogging" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.timelogging" value="${basedir}/out/artifacts/TimeLogging"/>
    <property name="artifact.output.timelogging:jar" value="${basedir}/out/artifacts/TimeLogging_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.TimeLogging" value="${artifacts.temp.dir}/TimeLogging.jar"/>
    <property name="temp.jar.path.TimeLogging.jar" value="${artifacts.temp.dir}/1/TimeLogging.jar"/>
    <mkdir dir="${artifacts.temp.dir}/1"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.timelogging" description="clean TimeLogging artifact output">
    <delete dir="${artifact.output.timelogging}"/>
  </target>
  
  <target name="artifact.timelogging" depends="init.artifacts, compile.module.timelogging" description="Build &#39;TimeLogging&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.timelogging}"/>
    <copy todir="${artifact.temp.output.TimeLogging}">
      <fileset dir="${timelogging.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_TimeLogging" dir="${artifact.temp.output.TimeLogging}" includes="**/*.jar">
      <exclude name="TimeLogging.jar"/>
    </fx:fileset>
    <fx:fileset id="all_TimeLogging" dir="${artifact.temp.output.TimeLogging}" includes="**/*.jar"/>
    <fx:application id="TimeLogging_id" name="TimeLogging" mainClass="null"/>
    <fx:jar destfile="${artifact.temp.output.TimeLogging}/TimeLogging.jar">
      <fx:application refid="TimeLogging_id"/>
      <fileset dir="${artifact.temp.output.TimeLogging}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_TimeLogging"/>
      </fx:resources>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.TimeLogging}/deploy" outfile="TimeLogging">
      <fx:application refid="TimeLogging_id"/>
      <fx:resources>
        <fx:fileset refid="all_TimeLogging"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.timelogging}">
      <fileset dir="${artifact.temp.output.TimeLogging}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.TimeLogging}"/>
    </delete>
  </target>
  
  <target name="artifact.timelogging:jar" depends="init.artifacts, compile.module.timelogging" description="Build &#39;TimeLogging:jar&#39; artifact">
    <property name="artifact.temp.output.timelogging:jar" value="${artifacts.temp.dir}/TimeLogging_jar"/>
    <mkdir dir="${artifact.temp.output.timelogging:jar}"/>
    <jar destfile="${temp.jar.path.TimeLogging.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${timelogging.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.TimeLogging.jar}" tofile="${artifact.temp.output.timelogging:jar}/TimeLogging.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.timelogging, artifact.timelogging:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.timelogging:jar}"/>
    <copy todir="${artifact.output.timelogging:jar}">
      <fileset dir="${artifact.temp.output.timelogging:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>